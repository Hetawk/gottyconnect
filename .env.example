# ttyd Deployment Configuration
# Copy this file to .env and configure your settings

# Service Name (used for systemd service, nginx config, and log files)
SERVICE_NAME=ttydconnect

# Domain Configuration
DOMAIN=ttydconnect.yourdomain.com

# Authentication Mode
# Set to "false" for API/token-based access (recommended for apps)
# Set to "true" for browser-based access with username/password popup
ENABLE_AUTH=false

# API Authentication Token (recommended for programmatic access)
# This token must be sent in the 'X-Auth-Token' header by clients
# Generate a secure token: openssl rand -hex 32
# Leave empty to auto-generate during deployment
TTYDCONNECT_AUTH_TOKEN=

# Browser Authentication (only used if ENABLE_AUTH=true)
# Generate a secure password: openssl rand -base64 32
TTYD_USERNAME=admin
TTYD_PASSWORD=your_secure_password_here

# Email for SSL certificate (Let's Encrypt)
SSL_EMAIL=your-email@example.com

# Port Configuration
TTYD_PORT=7681

# Optional: Custom ttyd options
# TTYD_OPTIONS="--max-clients 10 --client-option fontSize=16"

# Installation paths (auto-configured based on SERVICE_NAME - usually don't need to change these)
# TTYD_INSTALL_DIR=/usr/local/bin
# SERVICE_FILE=/etc/systemd/system/${SERVICE_NAME}.service
# NGINX_CONFIG=/etc/nginx/sites-available/${SERVICE_NAME}
# LOG_DIR=/var/log/${SERVICE_NAME}
